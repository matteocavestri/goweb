package components

templ App(route string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>GOAT Stack</title>
			<meta name="description" content="A Frontend Modern Stack Using Go, Alpine.js, and Tailwindcss"/>
			<!-- Scripts -->
			<script defer src="/static/js/alpine.min.js"></script>
			<!-- Styles -->
			<link rel="stylesheet" href="/static/css/styles.css"/>
			<!-- Favicon -->
			<link rel="icon" type="image/png" href="/static/assets/logo.png" sizes="576x576"/>
			<!-- Apple Touch Icon (for iOS devices) -->
			<link rel="apple-touch-icon" href="/static/assets/logo.png"/>
			<!-- Microsoft application tile icon -->
			<meta name="msapplication-TileImage" content="/static/assets/logo.png"/>
			<meta name="msapplication-TileColor" content="#ffffff"/>
			<style>
        [x-cloak] {
            display: none !important;
        }
    </style>
		</head>
		<body
			class="bg-white dark:bg-black text-stone-900 dark:text-stone-100 
    min-h-screen flex flex-col items-center justify-start"
		>
			<!-- Your Web App Content Here -->
			@Header()
			switch route {
				case "/":
					@Home()
				case "/examples":
					@Examples()
				case "/contact":
					@Contact()
				default:
					@Home()
			}
			@Footer()
		</body>
	</html>
}

templ Header() {
	<header
		x-cloak
		class="w-full flex justify-between items-center max-w-4xl mb-8 select-none 
sticky top-0 bg-white dark:bg-black z-10 shadow-sm dark:shadow-none py-2 px-4"
		x-data="{ path: window.location.pathname }"
	>
		<a
			href="/"
			class="flex items-center space-x-2 rounded-full border-2 sm:px-3 sm:py-1 sm:border-0"
			:class="path === '/' ? 'border-current/80 sm:bg-stone-100 sm:dark:bg-stone-800' : 'border-transparent'"
		>
			<img src="/static/assets/logo.png" alt="Logo" class="w-10 h-10"/>
			<span class="hidden sm:inline text-xl font-bold"><span class=" text-yellow-500">GOAT</span> Stack</span>
		</a>
		<nav class="space-x-1">
			<a
				href="/examples"
				class="px-4 py-2 hover:bg-stone-100 dark:hover:bg-stone-800 transition rounded-md inline-flex items-center"
				:class="{ 'bg-stone-100 dark:bg-stone-800': path === '/examples' }"
			>
				@IconPuzzle()
				<span class="ml-1 hidden sm:inline">Examples</span>
			</a>
			<a
				href="/contact"
				class="px-4 py-2 hover:bg-stone-100 dark:hover:bg-stone-800 transition rounded-md inline-flex items-center"
				:class="{ 'bg-stone-100 dark:bg-stone-800': path === '/contact' }"
			>
				@IconContact()
				<span class="ml-1 hidden sm:inline">Contact</span>
			</a>
			<a
				target="_blank"
				href="https://github.com/morethancoder/goat"
				class="px-4 py-2 hover:bg-stone-100 dark:hover:bg-stone-800 transition rounded-md inline-flex items-center"
			>
				@IconGithub()
				<span class="ml-1 hidden sm:inline">GitHub</span>
			</a>
		</nav>
	</header>
}

